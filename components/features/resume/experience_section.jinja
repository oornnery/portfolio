{#def items #}

{% if items %}
<section class="flex min-h-0 flex-col gap-y-3">
    <h2 class="text-lg sm:text-xl font-bold text-white">Work Experience</h2>
    <div class="flex flex-col gap-4 sm:gap-6">
        {% for item in items %}
        <article class="font-mono flex flex-col justify-start items-start gap-1 sm:gap-2">
            <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between items-start self-stretch gap-1 sm:gap-2">
                <div class="flex flex-wrap justify-start items-center gap-2">
                    <h3 class="text-sm sm:text-base font-semibold text-white">{{ item.title }}</h3>
                    {% if item.location %}
                    <span class="inline-flex items-center rounded-md bg-gray-800 text-gray-300 px-2 py-0.5 text-[10px] sm:text-xs font-semibold">
                        {{ item.location }}
                    </span>
                    {% endif %}
                </div>
                <p class="text-xs sm:text-sm text-gray-500 shrink-0">
                    {{ item.start_date }} - {{ item.end_date }}
                </p>
            </div>
            <div class="flex flex-col justify-start items-start gap-1 sm:gap-1.5">
                {% if item.company %}
                <p class="text-xs sm:text-sm font-medium text-gray-400">{{ item.company }}</p>
                {% endif %}
                {% if item.description %}
                <p class="text-xs sm:text-sm font-medium text-gray-400 leading-relaxed">{{ item.description }}</p>
                {% endif %}
            </div>
        </article>
        {% endfor %}
    </div>
</section>
{% endif %}
