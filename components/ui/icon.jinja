{#def name, size="default", class_name="" #}

{% set size_classes = {
    "xs": "w-3 h-3",
    "sm": "w-4 h-4",
    "default": "w-5 h-5",
    "lg": "w-6 h-6"
} %}
{% set icon_class = (size_classes.get(size, size_classes.default) ~ " " ~ class_name).strip() %}

