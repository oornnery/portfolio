{#import "@layouts/public.jinja" as PublicLayout #}
{#import "@ui/breadcrumb.jinja" as Breadcrumb #}
{#import "@features/resume/profile-header.jinja" as ProfileHeader #}
{#import "@features/resume/about-section.jinja" as AboutSection #}
{#import "@features/resume/experience-section.jinja" as ExperienceSection #}
{#import "@features/resume/education-section.jinja" as EducationSection #}
{#import "@features/resume/certificates-section.jinja" as CertificatesSection #}
{#import "@features/resume/skills-section.jinja" as SkillsSection #}
{#def seo, meta, content_html="", current_path="/about" #}

<PublicLayout seo={{ seo }} current_path={{ current_path }}>
    {% set breadcrumb_items = (
        {"label": "Home", "href": "/"},
        {"label": "About", "current": true},
    ) %}

    <Breadcrumb
        items={{ breadcrumb_items }}
        class_name="text-sm text-gray-500 -mt-2 sm:-mt-3 mb-4 sm:mb-5 fade-in flex items-center"
    />

    <div class="space-y-6" aria-label="Resume Content" id="resume-content">
        <ProfileHeader meta={{ meta }} profile_name={{ profile_name }} site_name={{ site_name }} social_links={{ social_links }} />
        <AboutSection content_html={{ content_html }} />
        <ExperienceSection items={{ meta.work_experience }} />
        <EducationSection items={{ meta.education }} />
        <CertificatesSection items={{ meta.certificates }} />
        <SkillsSection skills={{ meta.skills }} />
    </div>
</PublicLayout>
