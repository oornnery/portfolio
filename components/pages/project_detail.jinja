{#import "../layouts/public.jinja" as PublicLayout #}
{#import "../markdown/prose.jinja" as Prose #}
{#import "../ui/tag.jinja" as Tag #}
{#import "../ui/button.jinja" as Button #}
{#import "../ui/breadcrumb.jinja" as Breadcrumb #}
{#def seo, project, current_path="/projects" #}

<PublicLayout seo={{ seo }} current_path={{ current_path }}>
    {% set breadcrumb_items = (
        {"label": "Home", "href": "/"},
        {"label": "Projects", "href": "/projects"},
        {"label": project.title, "current": true},
    ) %}

    <Breadcrumb items={{ breadcrumb_items }} class_name="text-sm text-gray-500 -mt-2 sm:-mt-3 mb-5 sm:mb-6 fade-in flex items-center" />

    <article class="space-y-8">
        <header>
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
                {% if project.date %}
                <span>{{ project.date.year }}</span>
                {% endif %}
                {% if project.featured %}
                <span>&bull;</span>
                <span class="text-green-500">â˜… Featured</span>
                {% endif %}
            </div>

            <h1 class="text-4xl font-bold text-white mb-4">{{ project.title }}</h1>

            {% if project.description %}
            <p class="text-xl text-gray-400">{{ project.description }}</p>
            {% endif %}

            {% set chips = project.tech_stack if project.tech_stack else project.tags %}
            {% if chips %}
            <div class="flex flex-wrap gap-2 mt-4">
                {% for tech in chips %}
                <Tag text={{ tech }} />
                {% endfor %}
            </div>
            {% endif %}

            <div class="flex flex-wrap gap-4 mt-6">
                {% if project.live_url %}
                <Button href={{ project.live_url }} variant="primary" size="default" target="_blank" rel="noopener noreferrer" class="min-w-[146px]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M7 17 17 7"/><path d="M7 7h10v10"/></svg>
                    <span>Live Demo</span>
                </Button>
                {% endif %}
                {% if project.github_url %}
                <Button href={{ project.github_url }} size="default" target="_blank" rel="noopener noreferrer" class="min-w-[146px]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                    <span>Source Code</span>
                </Button>
                {% endif %}
            </div>
        </header>

        <Prose html_content={{ project.content_html }} />
    </article>
</PublicLayout>
