{#import "@layouts/public.jinja" as PublicLayout #}
{#import "@features/contact/contact-form.jinja" as ContactForm #}
{#import "@ui/social-links.jinja" as SocialLinks #}
{#import "@ui/header.jinja" as Header #}
{#import "@ui/breadcrumb.jinja" as Breadcrumb #}
{#def seo, csrf_token, success="", errors={}, form_data={}, current_path="/contact" #}

<PublicLayout seo={{ seo }} current_path={{ current_path }}>
    {% set breadcrumb_items = (
        {"label": "Home", "href": "/"},
        {"label": "Contact", "current": true},
    ) %}

    <div class="space-y-6 sm:space-y-8">
        <Breadcrumb items={{ breadcrumb_items }} class_name="text-sm text-gray-500 -mt-2 sm:-mt-3 mb-4 sm:mb-5 fade-in flex items-center" />

        <Header
            title="Contact"
            description="Get in touch with me."
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12">
            <section>
                <h2 class="text-lg font-medium text-white mb-4">Connect</h2>
                <SocialLinks links={{ social_links }} />
            </section>

            <section>
                <h2 class="text-lg font-medium text-white mb-4">Send a Message</h2>
                <ContactForm
                    csrf_token={{ csrf_token }}
                    success={{ success }}
                    errors={{ errors }}
                    form_data={{ form_data }}
                />
            </section>
        </div>
    </div>
</PublicLayout>
