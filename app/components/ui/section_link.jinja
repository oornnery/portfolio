{#def href, label, with_arrow=True, link_class="inline-flex items-center text-sm text-gray-400 hover:text-white transition-colors" #}

<a
    href="{{ href }}"
    data-analytics-event="click"
    data-analytics-id="section-link-{{ label | lower | replace(' ', '-') }}"
    data-analytics-label="{{ label }}"
    data-analytics-target="{{ href }}"
    {{ attrs.render(class=link_class) }}
>
    {{ label }}{% if with_arrow %} &rarr;{% endif %}
</a>
