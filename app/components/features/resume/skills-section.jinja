{#def skills #}

{% if skills %}
<section class="flex min-h-0 flex-col gap-y-3">
    <h2 class="text-lg sm:text-xl font-bold text-white">Skills</h2>
    <ul class="flex list-none flex-wrap gap-1.5 sm:gap-2 p-0" aria-label="Skills list">
        {% for skill in skills %}
        <li>
            <span class="inline-flex items-center rounded-md border px-2 sm:px-3 py-1 text-[10px] sm:text-xs font-semibold font-mono border-transparent bg-gray-800 text-gray-200 hover:bg-gray-700">
                {{ skill }}
            </span>
        </li>
        {% endfor %}
    </ul>
</section>
{% endif %}
